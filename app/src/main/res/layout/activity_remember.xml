<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="stated"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="act2"
            type="com.example.databindingdemo.RememberActivity" />

        <variable
            name="userVm"
            type="com.example.databindingdemo.UserViewModel" />

    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".RememberActivity">

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:checked="@={stated}"
            android:text="选择状态" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="显示内容"
            android:onClick="@{()->act2.show()}"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="测试修改User信息"
            android:onClick="@{()->act2.updateUser()}"/>

    </LinearLayout>
</layout>
